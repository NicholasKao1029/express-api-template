{
    "name": "express-api",
    "version": "1.0.0",
    "main": "./src/index.js",
    "repository": "",
    "author": "Nick Kao",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.24.0",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "eslint": "^8.5.0",
        "express": "^4.17.1",
        "husk": "^0.5.3",
        "knex": "^0.95.14",
        "lint-staged": "^12.1.2",
        "mocha": "^9.1.3",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "pg": "^8.7.1",
        "pg-hstore": "^2.3.4",
        "prettier": "2.5.1",
        "sequelize": "^6.12.0-beta.1",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "start": "node ./src/index.js",
        "dev-start": "nodemon ./src/index.js",
        "lint": "eslint . --ext .js",
        "prepare": "husky install",
        "test": "mocha 'tests/**/*.spec.js' --exit",
        "test-cov": "nyc mocha 'tests/**/*.spec.js' --exit",
        "dev-build": "docker-compose --file docker-compose.yaml build",
        "dev-docker": "docker-compose --file docker-compose.yaml up -d",
        "docker-build-run": "yarn dev-build && yarn dev-docker",
        "dev-down": "docker-compose --file docker-compose.yaml down",
        "dev-access": "docker exec -it api bash"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint staged"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "assert": "^2.0.0",
        "chai-as-promised": "^7.1.1",
        "proxyquire": "^2.1.3",
        "sequelize-auto": "^0.8.8",
        "sequelize-test-helpers": "^1.4.2",
        "sinon": "^12.0.1",
        "sinon-express-mock": "^2.2.1",
        "supertest": "^6.1.6"
    }
}
